<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/ccvItem"
        style="@style/cardView"
        android:layout_margin="2dp"
        android:background="?android:attr/selectableItemBackground"
        android:minHeight="64dp"
        android:padding="2dp">

        <View
            android:id="@+id/cloaked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="#337f7f7f"
            android:elevation="10dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/cfmRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="0dp">

                <LinearLayout

                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mainIcon"
                        android:layout_width="56dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:padding="4dp"
                        android:src="@drawable/ic_not_available" />

                    <TextView
                        android:id="@+id/memCate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grayLight"
                        android:gravity="center"
                        android:text="Adol. F"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:minHeight="28dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chh02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female Name"
                            android:textColor="@color/grayDark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/chh08"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mother's Name"
                            android:textColor="@color/black"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/chh05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="age years"
                            android:textColor="@color/gray"
                            android:textStyle="italic" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chh06"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_weddingring2"
                            android:text="Marital Status"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/csecStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginStart="28dp"
                            android:background="@color/grayLight"
                            android:gravity="center_vertical|center_horizontal"
                            android:letterSpacing="0.24"
                            android:paddingStart="12dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="2dp"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="italic|normal" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/indexedBar"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_alignParentBottom="true"
                android:background="@color/redLight"
                android:orientation="horizontal"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>